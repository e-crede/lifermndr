<%= form_with(model: reminder, class: "needs-validation") do |form| %>
  <% if reminder.errors.any? %>
        <% reminder.errors.each do |error| %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= error.full_message %>
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
        <% end %>
    </div>
  <% end %>
  <div class="card" style="width: 700px; margin: auto;">
  <div class="card-body">

  <div class="mb-3">
    <%= form.label 'Reminder Name', class: "form-label" %>
    <%= form.text_field :name, class: "form-control", html: "required" %>
  </div>

  <div class="mb-3">
    <%= form.label 'Reminder Date', class: "form-label"  %>
    <%= form.date_field :date, class: "form-control"  %>
  </div>

  <!--
  <div class="mb-3">
    <%= form.label :hour, class: "form-label"  %>
    <%= form.time_field :hour, class: "form-control"  %>
  </div>
  -->

  <div class="mb-3">
    <%= form.label :period, class: "form-label"  %>
    <div class="form-check form-check-inline">
      <%= form.label :_1d, class: "form-check-label"  %>
      <%= form.check_box :_1d, class: "form-check-input" %>
    </div>
    <div class="form-check form-check-inline">
      <%= form.label :_7d, class: "form-check-label"  %>
      <%= form.check_box :_7d, class: "form-check-input" %>
    </div>
    <div class="form-check form-check-inline">
      <%= form.label :_14d, class: "form-check-label"  %>
      <%= form.check_box :_14d, class: "form-check-input" %>
    </div>
    <div class="form-check form-check-inline">
      <%= form.label :_30d, class: "form-check-label"  %>
      <%= form.check_box :_30d, class: "form-check-input" %>
    </div>
    <div class="form-check form-check-inline">
      <%= form.label :_60d, class: "form-check-label"  %>
      <%= form.check_box :_60d, class: "form-check-input" %>
    </div>  
  </div>

    <div class="mb-3">
    <%= form.label :recurrence, class: "form-label"  %>
      <select class="form-select" name="reminder[recurrence]" id="reminder_recurrence" aria-label="RecurrenceSelection" >
        <option selected><%= @reminder.recurrence.to_s.empty? ? "" : @reminder.recurrence.capitalize %></option>
            <option value="once">Once</option>
            <option value="weekly">Weekly</option>
            <option value="monthly">Monthly</option>
            <option value="yearly">Yearly</option>
      </select>
    </div>

  <div class="mb-3">
    <%= form.label :active, class: "form-check-label"  %>
    <%= form.check_box :active, class: "form-check-label" %>
  </div>




  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-outline-primary btn-lg" %>
  </div>
  </div>
  </div>
<% end %>
